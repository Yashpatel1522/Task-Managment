<body>
  <body>
    <div class="d-flex container" style="width: fit-content;">
      <div class="m-auto" style="width: 400px;">
        <img src="/assets/loginmodule/image_processing20210406-19301-mn7yvu.gif" width="100%" height="auto">
      </div>
      <div style="width: 325px;">
        <form class="p-4" onchange="return isValidLogin()" method="post" id="login_form">
          <div class="row">
            <div class="col mb-3"><h1 class="text-center font fs-2">Task Management</h1></div>
            <div class="col mb-3"><h1 class="text-center font fs-3">Login</h1></div>
          </div>
          <div class="row">
            <div class="col mb-3"><p  id="error" class="alert alert-danger text-center p-2 bold" style='display: none;'></p></div>
          </div>
          <div class="row">
            <div class="col text-center" id="active_timer">
            </div>
          </div>
          <div class="row">
            <div class="col mb-3">
              <label class="font">Email ID : </label>
              <input tabindex="1" type="text" name="username" id="username" placeholder="Enter Email ....." class="form-control">
            </div>
          </div>
          <div class="row">
            <div class="col mb-3">
              <label class="font">Password : </label>
              <input tabindex="2" type="password" name="password" id="password" placeholder="Enter password....." class="form-control">
            </div>
          </div>
    
          <div class="row">
            <div class="col mb-3">
              <input type="button" tabindex="5" class="btn text-white  w-100" onclick="return isLogin()" value="Login" style="background-color: var(--fontcolor)">
            </div>
            <!-- <div class="col-md-6">
              <input tabindex="6" type="clear" onclick="this.type=reset" class="btn btn-outline-danger w-100" value="Clear">
            </div> -->
          </div>
  
          <div class="row">
            <div class="col text-center">
              <a href="/login/forget">Forget Password</a><br>
              <a href="/index">Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>   
    <script src="/js/loginmodule/validation.js"></script>
    <script src="/js/loginmodule/login.js"></script>
  </body>
</html>