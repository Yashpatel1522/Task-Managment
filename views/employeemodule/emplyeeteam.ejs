<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/employee/employee.css" />
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
  <script src="/js/employee/employeeteam.js"></script>
  <link rel="stylesheet" href="/css/employee/menubar.css" />
  <script src="/js/employee/employeeprofile.js"></script>
  <script src="/js/bootstrap.js"></script>
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
  <title>Document</title>
</head>

<body>
  <div class="employee">
    <div class="sidebar" style="width: 20%;min-height: 950px;">

      <%- include('../partials/employeemenubar') %>
    </div>
    <div class="containerMain">
      <div class="d-flex justify-content-between position-relative mt-2" style="align-items: center;">
        <div class="search float-start" style="  margin-left: 75%;">
          <input type="text" placeholder="Search Category.." class="rounded py-2 px-3 " id="searchteam" tabindex="1">
          <button type="button" class="btn btn-primary" onclick="seachresultteam()">
            <i class="bi bi-search"></i>
          </button>
        </div>
        <div class="profile dropbtn" class="dropbtn" onclick="showDropdown()">
          <img class="userprofile" src="/assets/employee/user.png" alt="" />
          <div id="dropdown" class="dropdown-content">
            <a type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="loadProfile()">Profile</a>
            <a href="employee/changepassword">Change Password</a>
            <a href="employee/logout">Logout</a>
          </div>
        </div>

        <!-- user profile modal -->
        <%- include('./profilemodal') %>
      </div>
      <div class="field">
        <p class="fs-1 text fw-bold">Team Details</p>
      </div>
      <div class="popup-team" id="team">
        <div class="body">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
              </div>
              <div class="modal-body" id="teamdetails"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row my-5 mx-5">
        <div class="card">
          <!-- <div class="card-header" style="text-align: center">
              <h5 class="card-title">Team Details</h5>
            </div> -->
          <table class="table" style="text-align: center" id="details">
            <tr>
              <th>Team Name</th>
              <th>Members Details</th>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>