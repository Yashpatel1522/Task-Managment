<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/employee/employee.css" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/employee/menubar.css"/>
    <script src="/js/employee/employeedashboard.js"></script>
    <script src="/js/employee/employeeprofile.js"></script>
    <script src="/js/employee/validation.js"></script>
    <script src="/js/bootstrap.js"></script>
    <title>Document</title>
  </head>

  <body>
    <div class="container">
      <div class="employee">

        <%- include('../partials/employeemenubar') %>
        <div class="container mx-5">
          <div class="d-flex justify-content-between position-relative mt-4">
            <h1>Dashboard</h1>
            <div class="profile" class="dropbtn" onclick="showDropdown()">
              <img class="userprofile" src="/assets/employee/user.png" alt="" />
              <div id="dropdown" class="dropdown-content">
             
                <a
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop"
                  onclick="loadProfile()"
                  >Profile</a
                >
                <a href="employee/changepassword">Change Password</a>
                <a href="employee/logout">Logout</a>
              </div>
            </div>
            <!-- user profile modal -->
            <%- include('./profilemodal') %>
          </div>
          <div>
          
                <div class="row my-5" id="taskCountsElement"></div>
          
                <div class="row my-5">
                  <div class="card">
                    <div class="card-header">
                      <h5 class="card-title">Upcoming deadlines</h5>
                    </div>
                    <table class="table">
                      <thead id="deadlineheading"></thead>
                      <tbody id="deadlinebody"></tbody>
                    </table>
                  </div>
                </div>
                <div class="row mb-2 " >
                  <div class="card">
                    <div class="card-header">
                      <h5 class="card-title">In Progress</h5>
                    </div>
                    <table class="table">
                      <thead id="inprogressheading" ></thead>
          
                      <tbody style="display: absolute " id="inprogressbody"></tbody>
                    </table>
                  </div>
                </div>
              </div>
      </div>
    </div>


  
    </body>
</html>
