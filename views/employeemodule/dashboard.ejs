<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/employee/employee.css" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="/css/employee/menubar.css" />
    <script src="/js/employee/employee.js"></script>
    <script src="/js/employee/employeeprofile.js"></script>
    <script src="/js/employee/employeedashboard.js"></script>
    <script src="/js/employee/validation.js"></script>
    <script src="/js/bootstrap.js"></script>
    <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" />
    <script src="/sweetalert2/sweetalert2.min.js"></script>
    <script src="/js/employee/employeenavigation.js"></script>
    <title>Document</title>
  </head>

  <body>
    <div class="employee">
      <div class="sidebar" style="width: 20%; min-height: 1014px">
        <%- include('../partials/employeemenubar') %>
      </div>

      <div class="containerMain">
        <div class="d-flex justify-content-between position-relative mt-2">
          <h1 class="mt-3 ms-5">Dashboard</h1>
          <div>
            <div
              class="profile d-flex me-5 border rounded-pill align-items-center"
              style="cursor: pointer"
              onclick="showDropdown()"
            >
              <div class="m-2 h-50">
                <img
                  class="userprofile img-thumbnail rounded-circle border border-dark"
                  style="width: 50px; height: 50px"
                  id="profile"
                  src="/assets/employee/user.png"
                  alt=""
                />
              </div>
              <p
                id="user_name"
                style="font-size: 18px; margin-top: 12px"
                class="pe-3"
              >
                <strong>dgsfdhsdhshfs</strong>
              </p>
              <div id="dropdown" class="dropdown-content">
                <a
                  href="/"
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#staticBackdrop"
                  onclick="loadProfile()"
                  >Profile</a
                >
                <a href="employee/changepassword">Change Password</a>
                <a href="employee/logout">Logout</a>
              </div>
            </div>
          </div>
          <!-- user profile modal -->
          <%- include('./profilemodal') %>
        </div>
        <div style="padding: 50px">
          <div class="row my-2" id="taskCountsElement"></div>

          <div class="row my-5">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title">Upcoming deadlines</h5>
              </div>
              <div class="table-responsive">
                <table class="table">
                  <thead id="deadlineheading"></thead>
                  <tbody id="deadlinebody"></tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="row mb-2">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title">In Progress</h5>
              </div>
              <div class="table-responsive">
                <table class="table">
                  <thead id="inprogressheading"></thead>

                  <tbody style="display: absolute" id="inprogressbody"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
