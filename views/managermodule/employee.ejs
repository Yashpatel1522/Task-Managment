<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Employee List</title>
	<link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
	<link rel="stylesheet" href="/bootstrape/css/bootstrap.css">
	<link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/managermodule/employee.css">
    <link rel="stylesheet" href="/css/loginmodule/popup.css">
    <script src="/js/managermodule/managerdashboard.js"></script>  

</head>

<body onload="setData()">
	<section class="section">
    <div class="managerMain">
        <div class="managerSidebar">
            <%- include("sidebar.ejs")%>
        </div>

        <div class="employeeContent pt-4">
            <div class="row">
                <div class="col-9">
                    <input type="text" placeholder="Search" name="searchdata" style="border-radius: 10px;" oninput = "searchEmployee(this.value)">
                </div>
                <div class="col-3">
                    <div class="row ps-5">
                        <i class="bi bi-bell fa-2x col" onclick="fetchNotificationData()"></i>
                        <i class="bi bi-person-circle fa-2x col" id="profImg" onclick="showOption()">
                            <div id="profClk">
                                <p data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="getProfile()" style="font-size: 14px;">Show Profile</p>
                                <p  style="font-size: 14px;">Log out <i class="bi bi-box-arrow-right ps-2"></i></p>
                            </div>
                        </i>
                    </div>
                </div>
            </div>

            <div class="showEmployees">
					
                <div class="employeeHead p-5">
                    <div class="tasklft">
                        <h2>Employees</h2>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" onclick="openPopup()">Add Employee</button>
                    </div>	
                </div>

                <div class="employeeList">
                    
                </div>
            </div>
        </div>

        <div class="managerProfile">
            <%- include("managerprofile") %>
        </div>
    </div>
    <div class="addregistrationcontainer" id="open-registration">
        <%- include("../loginmodule/registration")%>
      </div>
	</section>

	<script src="/sweetalert2/sweetalert2.min.js"></script>
	<script src="/bootstrape/js/bootstrap.min.js"></script>
	<script src="/js/managermodule/employee.js"></script>
    <script src="/js/loginmodule/popup.js"></script> 
</body>
</html>