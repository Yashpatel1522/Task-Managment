<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Manager Dashboard</title>
	<link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
	<link rel="stylesheet" href="/bootstrape/css/bootstrap.css">
	<link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
	<link rel="stylesheet" href="/css/managermodule/managerdashboard.css">
</head>

<body onload="getData()">
	<section class="section">
		<div class="managerMain">
			<div class="managerSidebar">
				<%- include("sidebar.ejs")%>
			</div>
	
			<div class="managerContent pt-4">
	
				<div class="row">
					<div class="col-9">
						<input type="text" placeholder="Search" style="border-radius: 10px;" onchange="searchTasks(this.value)">
					</div>
					<div class="col-3">
						<div class="row ps-5">
							<i class="bi bi-bell fa-2x col" onclick="fetchNotificationData()"></i>
							<i class="bi bi-person-circle fa-2x col" id="profImg" onclick="showOption()">
								<div id="profClk">
									<p data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="getProfile()">Show Profile</p>
									<p>Log out <i class="bi bi-box-arrow-right ps-2"></i></p>
								</div>
							</i>
						</div>
					</div>
				</div>

				<div class="taskCount p-4">
					<div class="row">
						<div class="col">
							<div class="card" style="width: 100%;">
								<div class="card-body">
								  <h5 class="card-title text-center pb-3 count" style="font-size: 55px;"></h5>
								  <p class="card-text text-center text-primary pb-2" style="font-size: 25px;">Todo</p>
								</div>
							  </div>
						</div>
						<div class="col">
							<div class="card" style="width: 100%;">
								<div class="card-body">
								  <h5 class="card-title text-center pb-3 count" style="font-size: 55px;"></h5>
								  <p class="card-text text-center text-warning pb-2" style="font-size: 25px;">In Progress</p>
								</div>
							  </div>
						</div>
						<div class="col">
							<div class="card" style="width: 100%;">
								<div class="card-body">
								  <h5 class="card-title text-center pb-3 count" style="font-size: 55px;"></h5>
								  <p class="card-text text-center text-success pb-2" style="font-size: 25px;">Completed</p>
								</div>
							  </div>
						</div>
					</div>
				</div>
	
				<div class="showtasks">
					
					<div class="taskhead p-5">
						<div class="tasklft">
							<h2>Tasks</h2>
						</div>
						<div>
							<button type="button" class="btn btn-primary" onclick="openPopup()">Add Task</button>
						</div>	
					</div>
					
				</div>
		</div>
		<div class="addtaskcontainer" id="popup">
			<%- include("addtask.ejs")%>
		</div>

		<div class="managerProfile" id="managerProfile">
			<%- include("managerprofile") %>
		</div>
	</div>
	</section>
	<script src="/sweetalert2/sweetalert2.min.js"></script>
	<script src="/bootstrape/js/bootstrap.min.js"></script>
	<script src="/js/managermodule/managerdashboard.js"></script>
</body>
</html>