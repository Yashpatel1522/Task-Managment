<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/bootstrape/css/bootstrap.css" />
    <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="/charts/apexcharts.css" />
    <link rel="stylesheet" href="/css/managermodule/charts.css" />
  </head>
  <body onload="drawCharts()">
    <div class="managerMain">
      <div class="managerSidebar"><%- include("sidebar.ejs")%></div>

      <div class="chartContent pt-4">
        <div class="row">
          <div class="col-9"></div>
          <div class="col-3" style="position: relative">
            <div class="row ps-5">
              <div class="col-3">
                <i
                  class="bi bi-bell fa-2x col"
                  onclick="fetchNotificationData()"
                ></i>
              </div>
              <div
                class="col-9 p-1"
                style="
                  border-radius: 25px;
                  background-color: #505050;
                  width: 60%;
                  cursor: pointer;
                "
                onclick="showOption()"
              >
                <img
                  src=""
                  alt=""
                  id="profImg"
                  style="border-radius: 100%; width: 25%"
                />
                <span
                  class="ps-2"
                  style="
                    color: white;
                    cursor: pointer;
                    font-family: sans-serif;
                    font-size: 18px;
                  "
                  id="userName"
                ></span>
              </div>
            </div>
            <div id="profClk">
              <p
                data-bs-toggle="modal"
                data-bs-target="#staticBackdrop"
                onclick="getProfile()"
              >
                Show Profile
              </p>
              <p>Log out <i class="bi bi-box-arrow-right ps-2"></i></p>
            </div>
          </div>
        </div>
        <div class="chartContainer pt-5">
          <div class="row">
            <div class="col">
              <div class="upcomingtask">
                <h2>Upcoming Tasks</h2>
                <hr />
                <div id="upcomingTasks" class="viewdata"></div>
              </div>
            </div>
            <div class="col">
              <div id="statusPie"></div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div id="statusBar"></div>
            </div>
            <div class="col">
              <div class="upcomingtask">
                <h2>Teams</h2>
                <hr />
                <div id="teams" class="viewdata"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="managerProfile"><%- include("managerprofile") %></div>
    </div>
    <script src="/charts/apexcharts.min.js"></script>
    <script src="/sweetalert2/sweetalert2.min.js"></script>
    <script src="/bootstrape/js/bootstrap.min.js"></script>
    <script src="/js/managermodule/charts.js"></script>
    <script src="/js/managermodule/notification.js"></script>
  </body>
</html>
