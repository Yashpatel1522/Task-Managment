<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/bootstrape/css/bootstrap.css">
	<link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" href="/charts/apexcharts.css">
    <link rel="stylesheet" href="/css/managermodule/charts.css">
</head>
<body onload="drawCharts()">
    
    <section class="section">
        <div class="managerMain">
            <div class="managerSidebar">
                <%- include("sidebar.ejs")%>
            </div>

            <div class="chartContent pt-4">
                <div class="row">
					<div class="col-9">
						
					</div>
					<div class="col-3">
						<div class="row ps-5">
							<i class="bi bi-bell fa-2x col" onclick="fetchNotificationData()"></i>
							<i class="bi bi-person-circle fa-2x col" id="profImg" onclick="showOption()">
                                <div id="profClk">
                                    <p data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="getProfile()">Show Profile</p>
                                    <p>Log out <i class="bi bi-box-arrow-right ps-2"></i></p>
                                </div>
                            </i>
						</div>
					</div>
				</div>

                <div class="chartContainer pt-5">
                    <div class="row">
                        <div class="col">
                            <div id="upcomingTasks" style="background-color: #e4dad4; border-radius: 15px;">
                                <h2 style="text-align: center; color: brown;">Upcoming Tasks</h2>
                            </div>
                        </div>
                        <div class="col" style="padding-top: 30px;">
                            <div id="statusPie"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div id="statusBar"></div>
                        </div>
                        <div class="col">
                            <div id="teams" style="background-color: #e4dad4; border-radius: 15px;">
                                <h2 style="text-align: center; color: blueviolet;">Teams</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="managerProfile">
                <%- include("managerprofile") %>
            </div>
        </div>
    </section>

    <script src="/charts/apexcharts.min.js"></script>
	<script src="/sweetalert2/sweetalert2.min.js"></script>
	<script src="/bootstrape/js/bootstrap.min.js"></script>
	<script src="/js/managermodule/charts.js"></script>
</body>
</html>