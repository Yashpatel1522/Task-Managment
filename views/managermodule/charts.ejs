<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/bootstrape/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/loginmodule/loadder.css" />
    <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="/charts/apexcharts.css" />
    <link rel="stylesheet" href="/css/managermodule/charts.css" />
  </head>
  <body onload="drawCharts()">
    <div id="loader" class="center"></div>
    <div class="managerMain">
      <div class="managerSidebar"><%- include("sidebar.ejs")%></div>
      <div class="chartContent pt-4" onclick="closeProf()">
        <div class="row">
          <div class="col-9">
            <!-- <div class="col mb-3"> -->
            <h1 class="font">Task Management</h1>
            <!-- </div> -->
          </div>
          <div class="col-3"><%- include("menubar.ejs")%></div>
        </div>
        <div class="chartContainer pt-5">
          <div class="row">
            <div class="col">
              <div class="upcomingtask">
                <h2>Upcoming Tasks</h2>
                <hr />
                <div id="upcomingTasks" class="viewdata"></div>
              </div>
            </div>
            <div class="col">
              <div id="statusPie"></div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div id="statusBar"></div>
            </div>
            <div class="col">
              <div class="upcomingtask">
                <h2>Teams</h2>
                <hr />
                <div id="teams" class="viewdata"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/charts/apexcharts.min.js"></script>
    <script src="/js/loginmodule/lodder.js"></script>

    <script src="/sweetalert2/sweetalert2.min.js"></script>
    <script src="/bootstrape/js/bootstrap.min.js"></script>
    <script src="/js/managermodule/charts.js"></script>
    <!-- <script src="/js/managermodule/managerprofile.js"></script> -->
  </body>
</html>
