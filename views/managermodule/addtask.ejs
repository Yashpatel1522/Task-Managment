      <div class="cont">
        <div class="row mb-2">
          <div class="col-md-11">
            <h3 class="text-center text-primary">ADD TASK</h3>
          </div>
          <div class="col-md-1">
            <i
              class="bx bxs-x-circle text-danger fs-2"
              onclick="closePopup()"
            ></i>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-12">
            <label for="tname" class="text-primary">Task Name</label>
            <input
              type="text"
              name="task_name"
              placeholder="Test task"
              id="task_name"
              class="reqfieled form-control"
            />
            <span class="errclass" id="tnerr"></span>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="assignto" id="Assin_task" class="text-primary"
              >Assign Task To employe</label
            >
            <select
              id="Assin_task_to"
              name="Assin_task_to"
              class="form-control"
              multiple
            >
              <option value="0">Select</option>
            </select>
            <!-- <span class="reqselecterr" id="aterr"></span> -->
          </div>
          <div class="col-md-6">
            <label for="assignto" id="Assin_task" class="text-primary"
              >Assign Task To Team</label
            >
            <select
              id="Assin_task_to_team"
              name="Assin_task_to_team"
              class="form-control"
              multiple
            >
              <option value="0">Select</option>
            </select>
            <!-- <span class="reqselecterr" id="aterr"></span> -->
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="tstage" id="task_stage" class="text-primary"
              >Task Stage</label
            >
            <select name="task_status" class="reqselect form-control">
              <option value="0">Select</option>
              <option value="todo">To Do</option>
              <option value="inprogress">In Progress</option>
              <option value="completed">Completed</option>
            </select>
            <span class="reqselecterr" id="tserr"></span>
          </div>
          <div class="col-md-6">
            <label for="category" id="taskcategory" class="text-primary"
              >Category</label
            >
            <select
              id="task_category"
              name="task_category"
              class="reqselect form-control"
            >
              <option value="0">Select</option>
            </select>
            <span class="reqselecterr" id="cterr"></span>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="sdate" class="text-primary">Task Start Date</label>
            <input
              type="text"
              placeholder="Task Start Date"
              name="task_start_date"
              id="task_start_date"
              class="reqfieled form-control"
            />
            <span class="errclass" id="dateerr"></span>
          </div>
          <div class="col-md-6">
            <label for="edate" class="text-primary">Task Due Date</label>
            <input
              type="text"
              placeholder="Due date"
              name="task_end_date"
              id="task_end_date"
              class="reqfieled form-control"
            />
            <span class="errclass" id="dateerr2"></span>
