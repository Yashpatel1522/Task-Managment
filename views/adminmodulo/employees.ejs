<html>

<head>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/adminmodulo/adduser.css">
</head>

<body id="body">

  <%- include('../partials/adminmenubar') %>
    <div class="rightbar">
      <div class="profilename position-relative">
        <div class="float-start">
          <h3 class="text-center m-3">Employees</h3>
        </div>
        <div class="d-flex position-absolute end-0">
          <div class="bell">
            <i class="fa-solid fa-bell"></i>
          </div>

          <div class="profile d-flex" style="cursor: pointer;">
            <i class="fa-solid fa-user"></i>
            <p><B>Name</B></p>
          </div>
        </div>
      </div>
      <div class="my-3" style="background-color: white; border-radius: 20px;">
        <div class="row1 my-4">
          <div class="search float-start mx-3 ">
            <input type="text" placeholder="Search Employee.." class="rounded py-2 px-3 " tabindex="1">
          </div>
          <div class="addemployee">
            <input type="button" value="+  Add Employee" class="btn btn-secondary float-end mx-2 my-2 px-3" tabindex="2"
              onclick="openPopup()">
          </div>
        </div>
        <div class="my-2">
          <table class="table text-center">
            <thead>
              <tr>
                <% Object.keys(employeeData[0]).forEach(function(key) {%>
                  <th>
                    <%=key%>
                  </th>
                  <%}); %>
                    <th>Details</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% for(let i=0 ; i<employeeData.length ; i++){ %>
                <tr>
                  <% Object.keys(employeeData[0]).forEach(function(key) {%>
                    <td>
                      <%= employeeData[i][key] %>
                    </td>
                    <%}); %>
                      <td><input type="button" value="View" class="btn btn-secondary px-3"></td>
                </tr>
                <%}%>
            </tbody>
          </table>
        </div>
        <div style="text-align: center;"><%- include('../partials/pagination', {pageno, page}) %></div>
      </div>
    </div>
    <div class="adduser" id="formpopup">
      <%- include("adduser.ejs")%>
    </div>
    <script src="/js/adminmodulo/userformvalidation.js"></script>
</body>

</html>