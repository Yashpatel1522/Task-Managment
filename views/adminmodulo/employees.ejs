<html>

<head>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/loginmodule/popup.css">
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
</head>

<body>

  </head>

  <body onload="getEmpData()">


    <%- include('../partials/adminmenubar') %>
      <div class="rightbar">
        <div class="profilename position-relative">
          <div class="float-start">
            <h3 class="text-center m-3">Employees</h3>
          </div>
          <div class="d-flex position-absolute end-0">
            <div class="bell">
              <i class="fa-solid fa-bell"></i>
            </div>

            <div class="profile d-flex" style="cursor: pointer;">
              <i class="fa-solid fa-user"></i>
              <p><B>Name</B></p>
            </div>
          </div>
        </div>
        <div class="my-3">
          <div class="row1 my-4">
            <div class="search float-start mx-3 ">
              <input type="text" placeholder="Search Employee.." class="rounded py-2 px-3 " tabindex="1"
                onchange="searchEmpData(this.value)" id="searchemp">
            </div>
            <div class="addemployee">
              <input type="button" value="+  Add Employee" class="btn btn-secondary float-end mx-2 my-2 px-3"
                tabindex="2" onclick="openPopup()">
            </div>
          </div>
        </div>
        <div class="my-2">
          <table class="table mx-2 text-center" id="emp-table">

          </table>
        </div>
        <div id="pagination">

        </div>
        <div class="addregistrationcontainer" id="show-detail">
          <div id="employee-form">

          </div>
        </div>
      </div>
      <div class="addregistrationcontainer" id="open-registration">
        <%- include("../loginmodule/registration")%>
      </div>
      <script src="/js/adminmodulo/employee.js"></script>
      <script src="/js/loginmodule/popup.js"></script>
  </body>

</html>