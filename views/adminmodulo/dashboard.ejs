<html>

<head>
  <!-- <link rel="stylesheet" href="/css/adminmodulo/admindashboard.css"> -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
<style>
  .card{
      width: calc(80%/3);
    }
</style>
</head>

<body>
  <%- include('../partials/adminmenubar') %>

    <div class="rightbar">
      <div class="profilename position-relative">
        <div class="float-start">
          <h3 class="text-center m-3">Dashboard</h3>
        </div>
        <div class="d-flex position-absolute end-0">
          <div class="bell">
            <i class="fa-solid fa-bell"></i>
          </div>

          <div class="profile d-flex" onclick="profileShow()" style="cursor: pointer;">
            <i class="fa-solid fa-user"></i>
            <p><B>Name</B></p>
          </div>
        </div>
      </div>
      <div class="bodypage my-3">
        <div class="row1">
          <h4 class="m-3">Users</h4>
          <div class="cards d-flex">
            <div class="card text-center mx-3">
              <div class="card-body my-3 mx-5">
                <h5 class="card-title">Managers</h5>
                <p class="card-text">no</p>
              </div>
            </div>
            <div class="card text-center mx-3 ">
              <div class="card-body my-3 mx-5">
                <h5 class="card-title">Employees</h5>
                <p class="card-text">no</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row1">
          <h4 class="m-3">Tasks</h4>
          <div class="cards d-flex">
            <div class="card text-center mx-3">
              <div class="card-body my-3 mx-5">
                <h5 class="card-title">To-do</h5>
                <p class="card-text">no</p>
              </div>
            </div>
            <div class="card text-center mx-3">
              <div class="card-body my-3 mx-5">
                <h5 class="card-title">In progress</h5>
                <p class="card-text">no</p>
              </div>
            </div>
            <div class="card text-center mx-3">
              <div class="card-body my-3 mx-5">
                <h5 class="card-title">Completed</h5>
                <p class="card-text">no</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>