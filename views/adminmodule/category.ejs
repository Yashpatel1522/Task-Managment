<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Management System</title>
  <link rel="stylesheet" href="/css/adminmodule/menubar.css">
  <link rel="stylesheet" href="/css/loginmodule/popup.css">
  <link rel="stylesheet" href="/bootstrap_icon_css/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css">
  <script src="/boxicon/dist/boxicons.js"></script>
  <link rel="stylesheet" href="/boxicon/css/boxicons.min.css">
  <script src="/sweetalert2/sweetalert2.min.js"></script>
  <style>
    .cards {

      flex-wrap: wrap;
    }

    .card {
      width: calc(80%/3);
    }
  </style>
</head>

<body onload="getCategoryData()">
  <div class="container">
    <div class="admin">
      <%- include('../partials/adminmenubar') %>
        <div class="rightbar">
          <%- include('../partials/navigation') %>

            <div class="my-5">
              <div class="row1 my-4">
                <div class="search float-start mx-3 ">
                  <input type="text" placeholder="Search Category.." class="rounded py-2 px-3 " tabindex="1"
                    onchange="searchCategoryData(this.value)">
                </div>
                <div class="addtasks">
                  <input type="button" value="+  Add Category" class="btn btn-secondary float-end mx-2 my-2 px-3"
                    tabindex="2">
                </div>
              </div>
            </div>
            <div>
              <div class="cards d-flex" id="category">

              </div>
            </div>
        </div>
    </div>
    <div class="text-center text-secondary p-2 " style="background-color: #323232; margin: 0 -10px;">
      copyright@2024
    </div>
  </div>
  <script src="/js/adminmodule/category.js"></script>
</body>

</html>