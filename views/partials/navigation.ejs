<html>
  <head>
    <link rel="stylesheet" href="/css/employee/employee.css" />
    <link rel="stylesheet" href="/sweetalert2/sweetalert2.min.css" />
    <script src="/sweetalert2/sweetalert2.min.js"></script>
    <script src="/js/employee/validation.js"></script>
  </head>

  <body>
    <div class="profilename position-relative">
      <div class="float-start">
        <h2 class="text-center m-3"></h2>
      </div>
      <div class="d-flex position-absolute end-0">
        <div class="bell">
          <i class="bi bi-bell" onclick="showNotification()"></i>
        </div>
        <div>
          <div
            class="profile d-flex m-2 border rounded-pill align-items-center"
            style="cursor: pointer"
            onclick="showDropdown()"
          >
            <div class="m-2 h-50">
              <img
                src=""
                alt="User Img"
                class="img-thumbnail rounded-circle border border-dark"
                style="width: 50px; height: 50px"
                id="admin_dashboard_img"
              />
            </div>
            <p id="user_name" style="font-size: 18px; margin-top: 12px"></p>
          </div>
          <div id="dropdown" class="dropdown-content me-5">
            <a
              type="button"
              data-bs-toggle="modal"
              data-bs-target="#staticBackdrop"
              onclick="loadAdminProfile()"
              >Profile</a
            >
            <a href="/admin/changepassword">Change Password</a>
            <a onclick="logoutPopup()">Logout</a>
          </div>
        </div>
        <%- include('../adminmodule/profile.ejs') %>
      </div>
    </div>
    <!-- <script src="/js/adminmodule/adminprofile.js"></script> -->
  </body>
</html>
